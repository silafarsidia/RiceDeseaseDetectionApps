<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_bg_splash_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bg_rice"/>

    <ImageView
        android:id="@+id/btn_start_detection"
        android:layout_width="270dp"
        android:layout_height="58dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/bg_btn_enabled"/>

    <TextView
        android:id="@+id/txt_start_detection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_btn1"
        android:fontFamily="@font/poppins_extra_bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/btn_start_detection"
        app:layout_constraintStart_toStartOf="@id/btn_start_detection"
        app:layout_constraintEnd_toEndOf="@id/btn_start_detection"
        app:layout_constraintBottom_toBottomOf="@id/btn_start_detection"/>

    <ImageView
        android:id="@+id/btn_information"
        android:layout_width="270dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/btn_start_detection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/bg_btn_enabled"/>

    <TextView
        android:id="@+id/txt_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_btn2"
        android:fontFamily="@font/poppins_extra_bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/btn_information"
        app:layout_constraintStart_toStartOf="@id/btn_information"
        app:layout_constraintEnd_toEndOf="@id/btn_information"
        app:layout_constraintBottom_toBottomOf="@id/btn_information"/>

</androidx.constraintlayout.widget.ConstraintLayout>